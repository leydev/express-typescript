{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "./src",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "CommonJS",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@controllers": ["controllers"],
            "@utils": ["utils/*"],
            "@router/*": ["router/*"],
            "@router": ["router/"],
            "@languages": ["languages/"],
            "@vendor/*": ["vendor/*"],
            "@models/*": ["models/*"]
        }
    },
    "include": [
        "src/**/*",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "jest.config.js"
    ]
}